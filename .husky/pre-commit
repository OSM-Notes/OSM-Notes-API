#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Pre-commit hook for OSM-Notes-API
# Unified Git hook for TypeScript/JavaScript projects
# Author: Andres Gomez (AngocA)
# Version: 2026-01-27
# Runs code quality checks before allowing commit
# This hook ensures code quality by running:
# 1. ESLint (linting)
# 2. TypeScript type checking
# 3. Prettier format checking (JS/TS/MD/JSON/YAML/CSS/HTML)
# 4. Python formatting (Black/Ruff) if Python files are staged

set -e  # Exit on error

echo "üîç Running pre-commit checks..."
echo ""

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check 1: Prettier formatting (TypeScript/JavaScript)
echo "üìù Checking code formatting..."
if npm run format:check > /dev/null 2>&1; then
    echo -e "${GREEN}‚úÖ Format check passed${NC}"
else
    echo -e "${RED}‚ùå Format check failed. Run: npm run format${NC}"
    exit 1
fi
echo ""

# Check 2: Prettier for other file types (Markdown, JSON, YAML, CSS, HTML)
STAGED_FORMAT_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(md|json|yaml|yml|css|html)$' || true)
if [ -n "$STAGED_FORMAT_FILES" ]; then
    echo "üìù Checking Prettier formatting for other file types..."
    PRETTIER_FAILED=0
    for file in $STAGED_FORMAT_FILES; do
        if [ -f "$file" ]; then
            if ! npx prettier --check "$file" > /dev/null 2>&1; then
                PRETTIER_FAILED=1
                echo -e "${RED}‚ùå Prettier format check failed for: $file${NC}"
                echo "   Run: npx prettier --write $file"
            fi
        fi
    done
    
    if [ $PRETTIER_FAILED -eq 1 ]; then
        echo -e "${RED}‚ùå Prettier format check failed.${NC}"
        exit 1
    fi
    echo -e "${GREEN}‚úÖ Prettier format check passed${NC}"
    echo ""
fi

# Check 3: Python formatting (if Python files are staged)
STAGED_PY_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.py$' || true)
if [ -n "$STAGED_PY_FILES" ]; then
    echo "üêç Checking Python formatting..."
    PYTHON_FAILED=0
    
    if command -v black &> /dev/null; then
        for file in $STAGED_PY_FILES; do
            if [ -f "$file" ]; then
                if ! black --check --line-length 100 "$file" > /dev/null 2>&1; then
                    PYTHON_FAILED=1
                    echo -e "${RED}‚ùå Black format check failed for: $file${NC}"
                    echo "   Run: black --line-length 100 $file"
                fi
            fi
        done
    elif command -v ruff &> /dev/null; then
        for file in $STAGED_PY_FILES; do
            if [ -f "$file" ]; then
                if ! ruff check "$file" > /dev/null 2>&1; then
                    PYTHON_FAILED=1
                    echo -e "${RED}‚ùå Ruff check failed for: $file${NC}"
                    echo "   Run: ruff check --fix $file"
                fi
            fi
        done
    else
        echo -e "${YELLOW}‚ö†Ô∏è  Black/Ruff not installed, skipping Python format check...${NC}"
    fi
    
    if [ $PYTHON_FAILED -eq 1 ]; then
        echo -e "${RED}‚ùå Python format check failed.${NC}"
        exit 1
    fi
    if [ -n "$STAGED_PY_FILES" ] && command -v black &> /dev/null || command -v ruff &> /dev/null; then
        echo -e "${GREEN}‚úÖ Python format check passed${NC}"
    fi
    echo ""
fi

# Check 4: ESLint
echo "üîß Running linter..."
if npm run lint > /dev/null 2>&1; then
    echo -e "${GREEN}‚úÖ Linter passed${NC}"
else
    echo -e "${RED}‚ùå Linter found issues. Run: npm run lint:fix${NC}"
    exit 1
fi
echo ""

# Check 5: TypeScript type checking
echo "‚úÖ Running type check..."
if npm run type-check > /dev/null 2>&1; then
    echo -e "${GREEN}‚úÖ Type check passed${NC}"
else
    echo -e "${RED}‚ùå Type check failed. Fix TypeScript errors before committing.${NC}"
    exit 1
fi
echo ""

echo -e "${GREEN}‚úÖ All pre-commit checks passed!${NC}"
echo ""
